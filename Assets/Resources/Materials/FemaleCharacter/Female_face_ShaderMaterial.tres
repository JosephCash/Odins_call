code = "shader_type spatial;
render_mode blend_mix, depth_draw_opaque, cull_back, diffuse_burley, specular_schlick_ggx, unshaded;

uniform vec4 albedo : source_color;
uniform sampler2D texture_albedo : source_color, filter_nearest_mipmap, repeat_enable;

// --- SEKCJA BRWI ---
uniform vec4 original_eyebrow_color : source_color; 
uniform vec4 new_eyebrow_color : source_color;      
uniform float eyebrow_sensitivity : hint_range(0.0, 1.0) = 0.2; 

// --- SEKCJA UST (NOWA) ---
uniform vec4 original_lip_color : source_color;      // Kolor ust z tekstury (pipeta)
uniform float lip_sensitivity : hint_range(0.0, 1.0) = 0.15; // Tolerancja
uniform float lip_darkness : hint_range(-1.0, 1.0) = 0.0;     // Suwak przyciemnienia (0.0 = brak zmian, 0.5 = ciemne)

// --- SEKCJA OCZU ---
uniform vec4 original_eye_color : source_color;            
uniform float eye_sensitivity : hint_range(0.0, 1.0) = 0.15; 
uniform float eye_hue_shift : hint_range(-1.0, 1.0) = 0.0;   
uniform float eye_sat_shift : hint_range(-1.0, 1.0) = 0.0;   
uniform float eye_val_shift : hint_range(-1.0, 1.0) = 0.0;   

uniform vec3 uv1_scale;
uniform vec3 uv1_offset;

// --- FUNKCJE RGB <-> HSV ---
vec3 rgb2hsv(vec3 c) {
    vec4 K = vec4(0.0, -1.0 / 3.0, 2.0 / 3.0, -1.0);
    vec4 p = mix(vec4(c.bg, K.wz), vec4(c.gb, K.xy), step(c.b, c.g));
    vec4 q = mix(vec4(p.xyw, c.r), vec4(c.r, p.yzx), step(p.x, c.r));

    float d = q.x - min(q.w, q.y);
    float e = 1.0e-10;
    return vec3(abs(q.z + (q.w - q.y) / (6.0 * d + e)), d / (q.x + e), q.x);
}

vec3 hsv2rgb(vec3 c) {
    vec4 K = vec4(1.0, 2.0 / 3.0, 1.0 / 3.0, 3.0);
    vec3 p = abs(fract(c.xxx + K.xyz) * 6.0 - K.www);
    return c.z * mix(K.xxx, clamp(p - K.xxx, 0.0, 1.0), c.y);
}
// ---------------------------

void vertex() {
	UV = UV * uv1_scale.xy + uv1_offset.xy;
}

void fragment() {
	vec2 base_uv = UV;
	vec4 albedo_tex = texture(texture_albedo, base_uv);
	vec3 final_color = albedo.rgb * albedo_tex.rgb;

	// --- 1. ZMIANA KOLORU UST (NOWA) ---
	float lip_dist = distance(final_color, original_lip_color.rgb);
	float lip_mask = 1.0 - step(lip_sensitivity, lip_dist);
	
	if (lip_mask > 0.01) {
		vec3 lip_hsv = rgb2hsv(final_color);
		
		// Odejmujemy jasność (Value)
		lip_hsv.z = clamp(lip_hsv.z - lip_darkness, 0.0, 1.0);
		
		vec3 darkened_lips = hsv2rgb(lip_hsv);
		final_color = mix(final_color, darkened_lips, lip_mask);
	}
	// -----------------------------------

	// --- 2. ZMIANA KOLORU OCZU ---
	float eye_dist = distance(final_color, original_eye_color.rgb);
	float eye_mask = 1.0 - step(eye_sensitivity, eye_dist);

	if (eye_mask > 0.01) {
		vec3 hsv = rgb2hsv(final_color);
		hsv.x += eye_hue_shift; 
		hsv.y = clamp(hsv.y + eye_sat_shift, 0.0, 1.0); 
		hsv.z = clamp(hsv.z + eye_val_shift, 0.0, 1.0); 
		vec3 shifted_color = hsv2rgb(hsv);
		final_color = mix(final_color, shifted_color, eye_mask);
	}

	// --- 3. ZMIANA KOLORU BRWI ---
	// Używamy raw_color, żeby zmiany oczu/ust nie zakłóciły maski brwi (jeśli nachodzą)
	vec3 raw_color = albedo.rgb * albedo_tex.rgb;
	float brow_dist = distance(raw_color, original_eyebrow_color.rgb);
	float brow_mask = 1.0 - step(eyebrow_sensitivity, brow_dist);
	
	final_color = mix(final_color, new_eyebrow_color.rgb, brow_mask);

	ALBEDO = final_color;
	ALPHA = albedo.a * albedo_tex.a;
}"

