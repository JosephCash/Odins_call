code = "shader_type spatial;
render_mode blend_mix, depth_draw_opaque, cull_back, diffuse_burley, specular_schlick_ggx, unshaded;

uniform vec4 albedo : source_color;
uniform sampler2D texture_albedo : source_color, filter_nearest_mipmap, repeat_enable;

// --- SEKCJA BRWI ---
uniform vec4 original_eyebrow_color : source_color; 
uniform vec4 new_eyebrow_color : source_color;       
uniform float eyebrow_sensitivity : hint_range(0.0, 1.0) = 0.2; 
uniform float eyebrow_softness : hint_range(0.0, 0.2) = 0.01; // Dodane dla wygładzenia krawędzi

// --- SEKCJA UST ---
uniform vec4 original_lip_color : source_color;      
uniform float lip_sensitivity : hint_range(0.0, 1.0) = 0.15; 
uniform float lip_darkness : hint_range(-1.0, 1.0) = 0.0;     

// --- SEKCJA OCZU ---
uniform vec4 original_eye_color : source_color;            
uniform float eye_sensitivity : hint_range(0.0, 1.0) = 0.15; 
uniform float eye_hue_shift : hint_range(-1.0, 1.0) = 0.0;   
uniform float eye_sat_shift : hint_range(-1.0, 1.0) = 0.0;   
uniform float eye_val_shift : hint_range(-1.0, 1.0) = 0.0;   

uniform vec3 uv1_scale;
uniform vec3 uv1_offset;

// --- FUNKCJE POMOCNICZE ---
vec3 rgb2hsv(vec3 c) {
    vec4 K = vec4(0.0, -1.0 / 3.0, 2.0 / 3.0, -1.0);
    vec4 p = mix(vec4(c.bg, K.wz), vec4(c.gb, K.xy), step(c.b, c.g));
    vec4 q = mix(vec4(p.xyw, c.r), vec4(c.r, p.yzx), step(p.x, c.r));

    float d = q.x - min(q.w, q.y);
    float e = 1.0e-10;
    return vec3(abs(q.z + (q.w - q.y) / (6.0 * d + e)), d / (q.x + e), q.x);
}

vec3 hsv2rgb(vec3 c) {
    vec4 K = vec4(1.0, 2.0 / 3.0, 1.0 / 3.0, 3.0);
    vec3 p = abs(fract(c.xxx + K.xyz) * 6.0 - K.www);
    return c.z * mix(K.xxx, clamp(p - K.xxx, 0.0, 1.0), c.y);
}

void vertex() {
    UV = UV * uv1_scale.xy + uv1_offset.xy;
}

void fragment() {
    vec2 base_uv = UV;
    vec4 albedo_tex = texture(texture_albedo, base_uv);
    vec3 base_color = albedo.rgb * albedo_tex.rgb;
    
    // 1. OBLICZANIE MASEK (0.0 = brak dopasowania, 1.0 = pełne dopasowanie)
    // Używamy step(dystans, czułość), co daje 1.0 jeśli dystans < czułość
    
    // Maska Ust
    float lip_dist = distance(base_color, original_lip_color.rgb);
    float lip_mask = 1.0 - step(lip_sensitivity, lip_dist);
    
    // Maska Oczu
    float eye_dist = distance(base_color, original_eye_color.rgb);
    float eye_mask = 1.0 - step(eye_sensitivity, eye_dist);

    // Maska Brwi
    float brow_dist = distance(base_color, original_eyebrow_color.rgb);
    // Opcjonalnie: smoothstep zamiast step dla ładniejszych krawędzi (anty-aliasing)
    float brow_mask = 1.0 - smoothstep(eyebrow_sensitivity - eyebrow_softness, eyebrow_sensitivity, brow_dist);

    // 2. MODYFIKACJA KOLORÓW (HSV)
    // Konwertujemy raz na HSV
    vec3 hsv = rgb2hsv(base_color);

    // Obliczamy zmodyfikowane parametry dla oczu
    float eye_h = hsv.x + eye_hue_shift;
    float eye_s = clamp(hsv.y + eye_sat_shift, 0.0, 1.0);
    float eye_v = clamp(hsv.z + eye_val_shift, 0.0, 1.0);

    // Obliczamy zmodyfikowane parametry dla ust (tylko Value/Jasność)
    float lip_v = clamp(hsv.z - lip_darkness, 0.0, 1.0);

    // MIESZAMY WARTOŚCI HSV NA PODSTAWIE MASEK
    // Jeśli eye_mask == 1.0, bierzemy eye_h, w przeciwnym razie oryginalne hsv.x
    hsv.x = mix(hsv.x, eye_h, eye_mask);
    hsv.y = mix(hsv.y, eye_s, eye_mask);
    
    // Tutaj musimy uważać, jeśli maski się nakładają (zwykle nie powinny).
    // Priorytet ustalamy kolejnością. Tutaj: Usta nadpisują oczy, jeśli się nałożą.
    float target_v = mix(hsv.z, eye_v, eye_mask);
    target_v = mix(target_v, lip_v, lip_mask);
    hsv.z = target_v;

    // Konwertujemy z powrotem na RGB
    vec3 final_color = hsv2rgb(hsv);

    // 3. APLIKACJA BRWI (Zwykłe zastąpienie koloru, bez HSV)
    // To robimy na końcu, nadpisując wynik z HSV
    final_color = mix(final_color, new_eyebrow_color.rgb, brow_mask);

    ALBEDO = final_color;
    ALPHA = albedo.a * albedo_tex.a;
}"

